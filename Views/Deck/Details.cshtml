@model hearthStoneDeckBuilder.Models.Deck

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Deck</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ClassType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClassType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Taille du deck(check)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.List.Count)
        </dd>
    </dl>
@if(Model.List != null){
<table class="table">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Classe
            </th>
            <th>
                Cout
            </th>
            <th>
                Raret√©
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (Card card in Model.List) {
            <tr data-class-type="@card.CardClass">
                <td>
                    @card.Name
                </td>
                <td>
                    @card.CardClass
                </td>
                <td>
                    @card.Cost
                </td>
                <td>
                    @card.Rarity
                </td>
                <td>
                    <button class="" onclick="popoverTest()" data-container="body" data-html="true" data-toggle="popover" data-placement="bottom" data-content='<img height="400" src="@card.LinkPicture">'>
                        ouvrir l'image
                    </button>
                </td>
            </tr>
    }
    </tbody>
</table>
}

<script type="text/javascript">
    function popoverTest(){
        $('[data-toggle="popover"]').popover();
    }
</script>
@model hearthStoneDeckBuilder.ViewModels.BuildDeckStatViewModel
<h1 id="spell_title" class="text-center" style="display:none">Sorts</h1>
<table id="@Model.CardStat.Name" class="table" style="display:none">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Classe
            </th>
            <th>
                Cout
            </th>
            <th>
                Raret√©
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (SpellCard card in Model.Cards) {
            <tr data-class-type="@card.CardClass">
                <td>
                    @card.Name
                </td>
                <td>
                    @card.CardClass
                </td>
                <td>
                    @card.Cost
                </td>
                <td>
                    @card.Rarity
                </td>
                <td>
                    <button class="" onclick="popoverTest()" data-container="body" data-html="true" data-toggle="popover" data-placement="bottom" data-content='<img height="400" src="@card.LinkPicture">'>
                        ouvrir l'image
                    </button>
                </td>
            </tr>
    }
    </tbody>
</table>